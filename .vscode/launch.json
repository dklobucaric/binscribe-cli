{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug BinScribe (--about)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/binscribe-cli.exe",
      "args": ["--about"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/mingw64/bin/gdb.exe",
      "preLaunchTask": "Build BinScribe CLI"
    },

    {
      "name": "Debug BinScribe (--encode demo.txt out.bin)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/binscribe-cli.exe",
      "args": ["--encode", "demo.txt", "out.bin"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb.exe",
      "preLaunchTask": "Build BinScribe CLI"
    }
  ]
}
